<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="ContentDescription"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/password_3_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/password_3_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="16dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/password_3_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/pass_rec_3_title"
                android:textSize="24sp"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"

                android:gravity="center"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/password_3_input_1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/pass_rec_3_et_1"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"

                android:layout_marginTop="40dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_3_title"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password_3_input_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/background_sign_et"

                android:padding="16dp"

                android:textSize="16sp"
                android:textColor="@color/msg_text"
                android:fontFamily="@font/roboto"

                android:hint="@string/password_additional"
                android:textColorHint="@color/secondary_text"
                android:inputType="textPassword"

                android:maxLength="24"

                android:layout_marginTop="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_3_input_1_title"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/password_3_input_1_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_show_password"
                android:background="@drawable/ripple_rounded"

                android:padding="8dp"
                android:layout_marginEnd="16dp"

                app:layout_constraintTop_toTopOf="@id/password_3_input_1"
                app:layout_constraintEnd_toEndOf="@id/password_3_input_1"
                app:layout_constraintBottom_toBottomOf="@id/password_3_input_1"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/password_3_err_1_holder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:visibility="invisible"

                android:layout_marginTop="4dp"

                app:layout_constraintTop_toBottomOf="@id/password_3_input_1"
                app:layout_constraintStart_toStartOf="@id/password_3_input_1"
                app:layout_constraintEnd_toEndOf="@id/password_3_input_1">

                <ImageView
                    android:id="@+id/password_3_err_1_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_warning"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/password_3_err_1_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:textSize="12sp"
                    android:textColor="@color/error"
                    android:fontFamily="@font/roboto"

                    android:layout_marginStart="4dp"

                    app:layout_constraintStart_toEndOf="@id/password_3_err_1_ic"
                    app:layout_constraintTop_toTopOf="@id/password_3_err_1_ic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/password_3_err_1_ic"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/password_3_input_2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/pass_rec_3_et_2"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"

                android:layout_marginTop="28dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_3_input_1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password_3_input_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/background_sign_et"

                android:padding="16dp"

                android:textSize="16sp"
                android:textColor="@color/msg_text"
                android:fontFamily="@font/roboto"

                android:hint="@string/password_additional"
                android:textColorHint="@color/secondary_text"
                android:inputType="textPassword"

                android:maxLength="24"

                android:layout_marginTop="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_3_input_2_title"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/password_3_input_2_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_show_password"
                android:background="@drawable/ripple_rounded"

                android:padding="8dp"
                android:layout_marginEnd="16dp"

                app:layout_constraintTop_toTopOf="@id/password_3_input_2"
                app:layout_constraintEnd_toEndOf="@id/password_3_input_2"
                app:layout_constraintBottom_toBottomOf="@id/password_3_input_2"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/password_3_err_2_holder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:visibility="invisible"

                android:layout_marginTop="4dp"

                app:layout_constraintTop_toBottomOf="@id/password_3_input_2"
                app:layout_constraintStart_toStartOf="@id/password_3_input_2"
                app:layout_constraintEnd_toEndOf="@id/password_3_input_2">

                <ImageView
                    android:id="@+id/password_3_err_2_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_warning"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/password_3_err_2_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:textSize="12sp"
                    android:textColor="@color/error"
                    android:fontFamily="@font/roboto"

                    android:layout_marginStart="4dp"

                    app:layout_constraintStart_toEndOf="@id/password_3_err_2_ic"
                    app:layout_constraintTop_toTopOf="@id/password_3_err_2_ic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/password_3_err_2_ic"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/password_3_button"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:text="@string/pass_rec_3_btn"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/speaker_text"

                android:backgroundTint="@color/speaker_active"
                app:rippleColor="@color/speaker_ripple"

                app:cornerRadius="12dp"

                android:layout_marginTop="40dp"

                app:layout_constraintTop_toBottomOf="@id/password_3_input_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>