<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/launch_activity_graph"
    app:startDestination="@id/videoFragment">

    <fragment
        android:id="@+id/videoFragment"
        android:name="com.ssrlab.assistant.ui.login.fragments.VideoFragment"
        android:label="VideoFragment" >

        <action
            android:id="@+id/action_videoFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/videoFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ssrlab.assistant.ui.login.fragments.LoginFragment"
        android:label="LoginFragment" >

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.ssrlab.assistant.ui.login.fragments.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>